<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        app:defaultValue="false"
        app:icon="@android:drawable/ic_lock_power_off"
        app:key="@string/key_device_status"
        app:summary="Disconnected"
        app:title="@string/title_device_status" />

    <PreferenceCategory app:title="@string/title_hass">

        <EditTextPreference
            android:inputType="text"
            app:defaultValue=""
            app:icon="@android:drawable/ic_menu_upload"
            app:key="@string/key_setting_hassip"
            app:title="@string/title_setting_hassip"
            app:summary="" />

        <EditTextPreference
            android:inputType="number"
            app:defaultValue="@string/key_setting_hasspt_default"
            app:key="@string/key_setting_hasspt"
            app:summary="@string/key_setting_hasspt_default"
            app:title="@string/title_setting_hasspt" />

        <Preference
            app:key="@string/key_setting_hassusr"
            app:summary="@string/summary_setting_hassusr"
            app:title="@string/title_setting_hassusr" />

        <EditTextPreference
            android:inputType="textPassword"
            app:key="@string/key_setting_hasspsw"
            app:summary="@string/summary_setting_hasspsw"
            app:title="@string/title_setting_hasspsw" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Custom InfluxDB Instance">

        <EditTextPreference
            android:inputType="text"
            app:defaultValue="@string/key_ifxdb_default"
            app:icon="@android:drawable/ic_menu_upload"
            app:key="@string/key_setting_ifxdb"
            app:summary="@string/key_ifxdb_default"
            app:title="@string/title_setting_ifxdb" />

        <EditTextPreference
            android:inputType="textUri"
            app:defaultValue="@string/key_ifxip_default"
            app:key="@string/key_setting_ifxip"
            app:summary="@string/key_ifxip_default"
            app:title="@string/title_setting_ifxip" />

        <EditTextPreference
            android:inputType="number"
            app:defaultValue="@string/key_ifxpt_default"
            app:key="@string/key_setting_ifxpt"
            app:summary="@string/key_ifxpt_default"
            app:title="@string/title_setting_ifxpt" />

    </PreferenceCategory>

</PreferenceScreen>